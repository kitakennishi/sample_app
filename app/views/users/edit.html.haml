- provide(:title, "Edit user")
%h1 Update your profile
.row
  .col-md-6.col-md-offset-3
    = form_for(@user) do |f|
      = render 'fields', f: f
      = f.submit "Save changes", class: "btn btn-large btn-primary"
    = gravatar_for @user
    = link_to "change", "http://gravatar.com/emails", target: ["_blank"]
